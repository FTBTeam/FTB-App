{
  "productName": "FTB Electron App",
  "name": "ftb-app",
  "version": "1.28.1",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.js",
  "email": "admin@feed-the-beast.com",
  "author": {
    "name": "Feed The Beast",
    "email": "admin@feed-the-beast.com",
    "url": "https://feed-the-beast.com"
  },
  "description": "FTB Desktop App for downloading and managing Modpacks",
  "scripts": {
    "dev": "cross-env TARGET_PLATFORM=electron NODE_ENV=development vite",
    "dev:ads": "cross-env SHOW_ADS=true npm run dev",
    "build": "cross-env NODE_ENV=production vue-tsc && cross-env NODE_ENV=production vite build && ow-electron-builder --config ./electron-builder.yml",
    "build:bin:all:64": "npm run build -- -wl --x64",
    "build:bin:all:arm": "npm run build -- -l --arm64",
    "build:bin:mac:64": "npm run build -- -m --x64",
    "build:bin:mac:arm": "npm run build -- -m --arm64",
    "gen:license": "license-checker --excludePrivatePackages --json --production > licenses.json",
    "overwolf:dev": "node tooling/overwolf/preinit.js && cross-env TARGET_PLATFORM=overwolf cross-env NODE_ENV=development vue-cli-service ow:electron:serve",
    "overwolf:build": "cross-env TARGET_PLATFORM=overwolf NODE_ENV=production vue-tsc && cross-env NODE_ENV=production vite build --mode overwolf",
    "overwolf:serve": "node tooling/overwolf/preinit.js &&  cross-env TARGET_PLATFORM=overwolf NODE_ENV=development vue-cli-service build --watch --mode overwolf",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "engines": {
    "node": "^22"
  },
  "dependencies": {
    "@types/object-inspect": "^1.8.4",
    "adm-zip": "^0.5.10",
    "balloon-css": "^1.2.0",
    "dayjs": "^1.11.7",
    "electron-updater": "^6.3.9",
    "marked": "^15.0.11",
    "mitt": "^3.0.0",
    "object-inspect": "^1.13.1",
    "openid-client": "^6.4.2",
    "pinia": "^3.0.1",
    "semver": "^7.6.2",
    "vue": "^3.4.21",
    "vue-gtag": "^3.5.0",
    "vue-router": "^4.5.0",
    "vue-virtual-scroller": "2.0.0-beta.8",
    "wysiwyg.css": "^0.0.4"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.7",
    "tailwindcss": "^4.1.7",
    "@chromatic-com/storybook": "^3",
    "@electron/notarize": "^2.3.0",
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-brands-svg-icons": "^6.1.1",
    "@fortawesome/free-regular-svg-icons": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@overwolf/ow-cli": "0.0.5-0",
    "@overwolf/ow-electron": "^34.5.5",
    "@overwolf/ow-electron-builder": "^26.0.11",
    "@overwolf/types": "^3.16.0",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/builder-vite": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@storybook/vue3": "^8.6.12",
    "@storybook/vue3-vite": "^8.6.12",
    "@types/adm-zip": "^0.5.5",
    "@types/jest": "^29.4.0",
    "@types/node": "^22.13.10",
    "@types/semver": "^7.2.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/browser": "^3.1.1",
    "@vitest/coverage-v8": "^3.1.1",
    "archiver": "^5.3.1",
    "cross-env": "^7.0.3",
    "electron": "^33.4.11",
    "electron-builder": "^26.0.11",
    "electron-log": "^5.3.2",
    "glob": "^10.3.10",
    "license-checker": "25.0.1",
    "playwright": "^1.51.1",
    "sass": "^1.85.1",
    "storybook": "^8.6.12",
    "typescript": "^5.8.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^3.1.1",
    "vue-tsc": "^2.0.26",
    "yaml": "^2.7.1"
  }
}
