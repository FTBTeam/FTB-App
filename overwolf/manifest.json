{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "FTB App Preview",
    "version": "1.0.22",
    "minimum-overwolf-version": "0.157.0.17",
    "author": "Feed The Beast",
    "icon": "icon_256.png",
    "icon_gray": "icon_256_preview.png",
    "launcher_icon": "launchericon.ico",
    "description": "As the home of FTB modpacks the FTBApp allows you to quickly download and install FTB modpacks with ease, allowing you to spend more time enjoying the game."
  },
  "permissions": [
    "Extensions",
    "FileSystem",
    "Clipboard",
    "Streaming",
    "Profile",
    "GameInfo",
    "Shutdown"
  ],
  "data": {
    "externally_connectable": {
      "matches": [
        "https://login.live.com",
        "https://*.xboxlive.com",
        "https://api.minecraftservices.com",
        "https://*.mojang.com"
      ]
    },
    "start_window": "background",
    "windows": {
      "background": {
        "file": "dist/background/background.html",
        "is_background_page": true
      },
      "index": {
        "file": "dist/desktop/index.html",
        "native_window": true,
        "transparent": true,
        "resizable": true,
        "desktop_only": true,
        "size": {
          "width": 1545,
          "height": 900
        },
        "min_size": {
          "width": 1220,
          "height": 780
        },
        "block_top_window_navigation": true,
        "popup_blocker": true
      },
      "chat": {
        "mute": true,
        "file": "dist/desktop/chatPage.html",
        "native_window": true,
        "transparent": true,
        "resizable": true,
        "desktop_only": true,
        "size": {
          "width": 300,
          "height": 626
        },
        "min_size": {
          "width": 300,
          "height": 626
        }
      }
    },
    "extra-objects": {
      "OverwolfShim": {
        "file": "OverwolfShim.dll",
        "class": "OverwolfShim.OverwolfShim"
      }
    },
    "force_browser": "user",
    "protocol_override_domains": {
      "googlesyndication": "http"
    },
    "url_protocol": {
      "scheme": "ftb"
    },
    "developer": {
      "enable_auto_refresh": true
    }
  }
}